<h1 class="text-center">My Lists</h1>

<div class="container text-center">
  <div class="row">
    <% @lists.each do |list|%>
      <div class="col card-category" style="background-image: url(<%= list.photo.attached? ? cl_image_path(list.photo.key)
            : 'https://images.unsplash.com/photo-1478720568477-152d9b164e26?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1770&q=80' %>">
        <p class="text-center"><%= link_to "#{list.name}", list_path(list) %></p>
      </div>
    <% end %>
  </div>
</div>



<p><%= link_to "Add new List", lists_new_path %><p>