<h1 class="text-center"><%= @list.name %></h1>

<% @movies.each do |movie|%>
<div class="container">
  <img src="<%=movie.poster_url%>" width="200px">
  <h4><%= movie.title %></h4>
  <p><%= movie.overview %></p>
  <%= #link_to "Bookmark this movie", %>
</div>
<% end %>


<div class="container">
  <%= link_to "Back To the list", lists_path %>
</div>