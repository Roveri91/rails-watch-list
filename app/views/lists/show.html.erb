<div class="container text-center">
  <div class="row">
    <% @movies.each do |movie|%>
      <div class="col-3">
      <div class="movie-container">
        <div class="movie-image-container">
          <img src="<%=movie.poster_url%>" width="200px">
        </div>
        <div class="movie-text-container p-2">
          <h3><%= movie.title %></h3>
          <p><%= movie.overview %></p>
        </div>
        <p>Delete movie</p>
      </div>
      </div>
    <% end %>
  </div>
</div>


<div class="container">
  <p class="mt-5 btn btn-submit"><%= link_to "Add Movie", new_list_bookmark_path(@list) %></p>
  <p class="mt-5 btn btn-submit"><%= link_to "Back", root_path %></p>
</div>
